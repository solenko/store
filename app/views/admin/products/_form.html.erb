<%= form_for([:admin, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" class="alert-message error">
      <h2>Ошибка:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="span6">
    <div> <img alt="" src="/pid_image.jpg"> </div>
	<div>
      <img alt="" src="/pid_image_small.jpg">
	  <img alt="" src="/pid_image_small.jpg">
	  <img alt="" src="/pid_image_small.jpg">
	  <img alt="" src="/pid_image_small.jpg">
	</div>
  </div>
  
  <div class="span10">
  <table class="bordered-table zebra-striped">
	  <tbody>
	    <tr>
		  <td> Артикул </td>
		  <td> <%= f.text_field :art %> </td>
	    </tr>
	
   	    <tr>
	      <td> Название </td>
	      <td> <%= f.text_field :name %> </td>
        </tr>
	
	    <tr>
          <td> Цена </td>
	      <td> <%= f.text_field :price %></td>
	    </tr>
        
		<tr>
		  <td> Размеры: </td>
		  <td>
		    <table>
		      <%= f.fields_for :productsizes, @product.productsizes.sort_by{|a| a.size_id} do |ps| %>
		        <tr>
                  <%= ps.hidden_field :size_id %>
		          <td> <%= ps.object.size.code %> </td>
			      <td> <%= ps.text_field :amount %></td>
               </tr>
              <% end %>
		    </table>
	      </td>
		</tr>
		
		<tr>
		  <td> Категории: </td>
		  <td>
		  <%= f.fields_for :productcategories, @product.productcategories do |pc| %>
            <%= pc.select :category_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, {}, { :multiple => true, :size => 30} %>
		  <% end %>
		  </td>
		</tr>
		
	    <tr>
          <td> Описание </td>
          <td> <%= f.text_area :description, :class => 'span14' %> </td>
        </tr>
		
        <tr>
          <td> Новинка? </td>
          <td> <%= f.check_box :new_product %> </td>
        </tr>
		
		
	
      </tbody>
    </table>

  

  <div class="actions">
    <%= f.submit "Сохранить", :class => 'btn success' %>
	<%= link_to 'Назад', admin_products_path, :class => 'btn' %>
  </div>

<% end %>
 </div>
