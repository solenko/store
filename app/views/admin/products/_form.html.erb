<%= form_for([:admin, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" class="alert-message error">
      <h2>Ошибка:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="bordered-table zebra-striped">
	  <tbody>
	    <tr>
		  <td> Артикул </td>
		  <td> <%= f.text_field :art %> </td>
	    </tr>
	
   	    <tr>
	      <td> Название </td>
	      <td> <%= f.text_field :name %> </td>
        </tr>
	
	    <tr>
          <td> Цена </td>
	      <td> <%= f.text_field :price %></td>
	    </tr>
        
		<tr>
		  <td rowspan="5"> Размеры: </td>
		  <td>
		  <%= f.fields_for :productsizes, @product.productsizes do |ps| %>
		    <tr colspan="3">
              <td> <%= ps.hidden_field :size_id %> </td>
		      <td> <%= ps.object.size.code %> </td>
			  <td> <%= ps.text_field :amount %></td>
            </tr>
          <% end %>
	  
			  
		  </td>
		</tr>
		
	    <tr>
          <td> Описание </td>
          <td> <%= f.text_area :description, :class => 'span14' %> </td>
        </tr>
	
      </tbody>
    </table>

  

  <div class="actions">
    <%= f.submit "Сохранить", :class => 'btn success' %>
	<%= link_to 'Назад', admin_products_path, :class => 'btn' %>
  </div>

<% end %>
