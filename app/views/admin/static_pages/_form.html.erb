<%= form_for([:admin, @static_page]) do |f| %>
  <% if @static_page.errors.any? %>
    <div id="error_explanation" class="alert-message error">
	  <h2>Ошибка:</h2>
      <ul>
	  
      <% @static_page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Название:
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    Текст:<br>
    <%= f.cktext_area :text, :cols=>"100", :rows=>"30" %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить", :class => 'btn success' %>
	<%= link_to 'Назад', admin_static_pages_path, :class => 'btn' %>
  </div>

<% end %>
