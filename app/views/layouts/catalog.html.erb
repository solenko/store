<!DOCTYPE html>
<html>
<head>
  <title>RiMaRi::Store - Каталог - <%= @title %></title>
  <%= stylesheet_link_tag "common" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="main_all">
<div class="main">
<div class="main_inner">
<div class="main_content">
<%= render "/header" %>

<div class="content">
  <div class="sub_content1">
    <ul>
	<li><%= link_to 'Новинки', newest_path %></li>
	<% Category.roots.each do |cat| %>
		<li> <%= link_to "#{cat.name}", { :controller => "products", :action => "index", :category_id => cat.id} %></li>
                <% cat.children.each do |child| %>
                  <li>-- <%= link_to "#{child.name}", { :controller => "products", :action => "index", :category_id => child.id} %></li>
                <% end %>
	<% end %>
	</ul>
  </div>
<%= yield %>
</div>

<%= render "/footer" %>
</div>

</div></div></div>
</body>
</html>