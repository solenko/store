<!DOCTYPE html>
<html>
<head>
  <title>AdminPanel for RiMaRi</title>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
  <%= javascript_include_tag "application", :cache => true %>
  <%= csrf_meta_tags %>
  <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>
</head>
<body>
<div class="container">
  <% if notice %>
    <div class="alert-message success"><%= notice %></div>
  <% end %>

  <% if alert %>
    <div class="alert-message error"><%= alert %></div>
  <% end %>

     <div class="topbar">
      <div class="topbar-inner">
        <div class="container-fluid">
          <a class="brand" href="#">RiMaRi::Admin</a>

          <ul class="nav">
            <li><%= link_to 'Товары', admin_products_path %></li>
            <li><%= link_to 'Категории', admin_categories_path %></li>
            <li><%= link_to 'Размеры', admin_sizes_path %></li>
          </ul>
		  
          <p class="pull-right">Logged in as <a href="#">username</a></p>

        </div>
      </div>
    </div>

  <%= yield %>
</div>
</body>
</html>
